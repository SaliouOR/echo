<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Messages | Echo</title>
  <link rel="stylesheet" href="/styles/styles.css">
  <link rel="stylesheet" href="/styles/feed.css">
  <link rel="stylesheet" href="/styles/messages.css">
  <link rel="stylesheet" href="/styles/alerts.css">
  <link rel="stylesheet" href="/styles/emoji.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="icon" type="image/x-icon" href="/images/echo-logo.ico">
</head>
<body>
  <div class="feed-container messages-page">
    <!-- Left Sidebar -->
    <%- include("partials/leftSideNav") %>
    
    <!-- Main Content -->
    <main class="main-content messages-container">
      <!-- Messages Sidebar -->
      <aside class="messages-sidebar">
        <header class="messages-header">
          <h2>Messages</h2>
        </header>
        
        <div class="messages-search">
          <i class="fas fa-search" aria-hidden="true"></i>
          <input type="text" id="conversation-search" placeholder="Search messages" aria-label="Search messages">
        </div>
        
        <!-- Conversations List -->
        <%- include('partials/conversationsPartial', { conversations, reqUser, activeConversation }) %>
      </aside>
      
      <!-- Message Content -->
      <%- include('partials/messagePartial', { activeConversation, reqUser }) %>
    </main>
    
    <!-- Right Sidebar -->
    <%- include("partials/rightSideNav") %>

    <!-- Compose  -->
    <%- include("partials/composeModal") %>
  </div>

  

  <!-- Conversation Info Modal -->
  <div id="conversation-info-modal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Conversation Info</h2>
        <button class="close-modal" aria-label="Close modal">&times;</button>
      </div>
      <div class="modal-body" id="conversation-info-content">
      </div>
    </div>
  </div>

  <!-- Image Upload Input-->
  <input type="file" id="message-image-upload" accept="image/*" hidden>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

  <script
    src="https://cdn.socket.io/4.8.1/socket.io.min.js"
    integrity="sha384-mkQ3/7FUtcGyoppY6bz/PORYoGqOl7/aSUMn2ymDOJcapfS6PHqxhRTMh1RR0Q6+"
    crossorigin="anonymous"
  ></script>


  <script nonce="<%= nonce %>">
    window.CURRENT_USER = <%- JSON.stringify(reqUser) %>;
    window.ACTIVE_CONVERSATION = <%- JSON.stringify(activeConversation) %>;
  </script>

  <script type="module" src="/js/alerts.js"></script>
  <script type="module" src="/js/emoji.js"></script>
  <script type="module" src="/js/feed.js"></script>
  <script type="module" src="/js/messages.js"></script>
  <script type="module" src="/js/notifications.js"></script>
</body>
</html>
